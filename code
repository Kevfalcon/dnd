def dndancest():
    global ancestries
    print("What ancestry do you want to play?")
    print(ancestries)
    print("Or 0 for a random ancestry")
    anc_input = 1
    while anc_input > 0:
        anc_num = input()
        if anc_num.isdigit():
            if int(anc_num) >= 0 and int(anc_num) <= len(ancestries):
                if int(anc_num) == 0:
                    anc_num = random.randint(1, len(ancestries))
                anc_input = 0

            else:
                print("Invalid selection. Enter a number between 0 %s" % len(ancestries))
        else:
            print("Invalid selection. Enter a number between 0 and %s" % len(ancestries))
    return anc_num


def dndclass():
    global classes
    print("What class you you want to play?")
    print(classes)
    print("Or 0 for a random class")
    class_input = 1
    while class_input > 0:
        class_num = input()
        if class_num.isdigit():
            if int(class_num) >= 0 and int(class_num) <= len(classes):
                if int(class_num) == 0:
                    class_num = random.randint(1, len(classes))
                class_input = 0
                class_name = classes[int(class_num)]
            else:
                print("Invalid selection. Enter a number between 0 and %s" % len(classes))
        else:
            print("Invalid selection. Enter a number between 0 and %s" % len(classes))
    return class_num


def dndstatroll(minimum):
    again = 1
    while again > 0:
        array = []
        for j in range(6):
            values = []
            for i in range(4):
                values.append(random.randint(1, 6))
            values.remove(min(values))
            stat = sum(values)
            array.append(stat)
        array.sort(reverse=True)
        if sum(array) >= minimum:
            again = 0
    return array


def dndmanualstat(array):
    global allstats
    stats = {
        "STR": 0,
        "DEX": 0,
        "CON": 0,
        "INT": 0,
        "WIS": 0,
        "CHA": 0
    }
    array_work = array.copy()
    for i in range(6):
        check = 1
        while check > 0:
            print("Alright your array is: %s" % array_work)
            print("What value do you want to assign to %s?" % allstats[i])
            assign = input()
            if assign.isdigit():
                if int(assign) in array_work:
                    stats[allstats[i]] = int(assign)
                    array_work.remove(int(assign))
                    check = 0
                else:
                    print("That's not valid. Enter a value that is still in your array")
            else:
                print("That's not valid. Enter a value that is still in your array")
    return (stats)


def dndrandomstats(array):
    global allstats
    stats = {
        "STR": 0,
        "DEX": 0,
        "CON": 0,
        "INT": 0,
        "WIS": 0,
        "CHA": 0
    }
    array_work = array.copy()
    for i in range(6):
        roll = random.randint(0, len(array_work) - 1)
        stats[allstats[i]] = array_work[roll]
        array_work.remove(array_work[roll])
    return (stats)


def dndautomatedstat(array, classnum):
    global allstats
    stats = {
        "STR": 0,
        "DEX": 0,
        "CON": 0,
        "INT": 0,
        "WIS": 0,
        "CHA": 0
    }
    array_work = array.copy()
    if classnum == 1:
        stats["STR"] = max(array_work)
        array_work.remove(max(array_work))
        stats["CON"] = max(array_work)
        array_work.remove(max(array_work))
        stats["DEX"] = max(array_work)
        array_work.remove(max(array_work))
        statcheck1 = 1
        while statcheck1 > 0:
            print("Would you rather have Wisdom (WIS), Intelligence (INT), or Charisma (CHA)?")
            statchoice1 = input()
            if statchoice1.upper() == "WIS" or statchoice1.upper() == "W" or statchoice1.upper() == "WISDOM":
                stats["WIS"] = max(array_work)
                array_work.remove(max(array_work))
                statcheck2 = 1
                while statcheck2 > 0:
                    print("Right, and do you want higher Intelligence (INT) or Charisma (CHA)?")
                    statchoice2 = input()
                    if statchoice2.upper() == "INT" or statchoice2.upper() == "I" or statchoice2.upper() == "INTELLIGENCE":
                        stats["INT"] = max(array_work)
                        array_work.remove(max(array_work))
                        stats["CHA"] = max(array_work)
                        array_work.remove(max(array_work))
                        statcheck1 = 0
                        statcheck2 = 0
                    elif statchoice2.upper() == "CHA" or statchoice2.upper() == "C" or statchoice2.upper() == "CHARISMA":
                        stats["CHA"] = max(array_work)
                        array_work.remove(max(array_work))
                        stats["INT"] = max(array_work)
                        array_work.remove(max(array_work))
                        statcheck1 = 0
                        statcheck2 = 0
                    else:
                        print("Invalid Input")
            elif statchoice1.upper() == "INT" or statchoice1.upper() == "I" or statchoice1.upper() == "INTELLIGENCE":
                stats["INT"] = max(array_work)
                array_work.remove(max(array_work))
