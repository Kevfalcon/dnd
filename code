def dndstatassign(array, classnum):
    assigninput = 1
    while assigninput > 0:
        print("Do you want to manually (M) assign your stats, randomly (R) assign them, or automate (A) it? M/R/A")
        assignchoice = input()
        if assignchoice.upper() == "M" or assignchoice.upper() == "MANUAL":
            stats = dndmanualstat(array)
            print(stats)
            assigninput2 = 1
            while assigninput2 > 0:
                print("Are you happy with this stat assignment? Y/N")
                statconfirm = input()
                if statconfirm == "Y" or statconfirm == "YES":
                    assigninput = 0
                    assigninput2 = 0
                elif statconfirm == "N" or statconfirm == "NO":
                    assigninput2 = 0
                    print("Alright, then lets try again!")
                else:
                    print("Invalid Input. Enter Y if you are happy with your stat assignment and N to assign them "
                          "differently")
        elif assignchoice.upper() == "A" or assignchoice.upper() == "AUTOMATE":
            stats = dndautomatedstat(array, classnum)
            print(stats)
            assigninput2 = 1
            while assigninput2 > 0:
                print("Are you happy with this stat assignment? Y/N")
                statconfirm = input()
                if statconfirm == "Y" or statconfirm == "YES":
                    assigninput = 0
                    assigninput2 = 0
                elif statconfirm == "N" or statconfirm == "NO":
                    assigninput2 = 0
                    print("Alright, then lets try again!")
                else:
                    print("Invalid Input. Enter Y if you are happy with your stat assignment and N to assign them "
                          "differently")
        elif assignchoice.upper() == "R" or assignchoice.upper() == "RANDOM":
            stats = dndrandomstats(array)
            print(stats)
            assigninput2 = 1
            while assigninput2 > 0:
                print("Are you happy with this stat assignment? Y/N")
                statconfirm = input()
                if statconfirm == "Y" or statconfirm == "YES":
                    assigninput = 0
                    assigninput2 = 0
                elif statconfirm == "N" or statconfirm == "NO":
                    assigninput2 = 0
                    print("Alright, then lets try again!")
                else:
                    print("Invalid Input. Enter Y if you are happy with your stat assignment and N to assign them "
                          "differently")
        else:
            print("Invalid Input. Enter M for manual stat assignment, R for random, or A for automated")
    print("Here is your final stat assignment:")
    return (stats)


def dndanceststat(stats, ancnum):
    global ancestrystats, allstats
    new_stats = stats.copy()
    for i in range(6):
        new_stats[allstats[i]] += ancestrystats[ancnum][i]
        if ancestrystats[ancnum][i] > 0:
            print("Your %s has been increased by %s due to your ancestry." % (allstats[i], ancestrystats[ancnum][i]))
    if ancestrystats[ancnum][6] > 0:
        print()
        print("Your ancestry allows you to add %s to a stat of your choice that has not already been increased." % ancestrystats[ancnum][6])
        statcheck1 = 1
        while statcheck1 > 0:
            print("Key in the corresponding number to choose:")
            print("Strength: 1, Dexterity: 2, Constitution: 3, Intelligence: 4, Wisdom: 5, Charisma: 6")
            statchoice1 = input()
            if statchoice1.isdigit():
                if 0 < int(statchoice1) <= 6 and ancestrystats[ancnum][int(statchoice1) - 1] > 0:
                    print("You cannot increase a stat a second time.")
                elif 0 < int(statchoice1) <= 6:
                    new_stats[allstats[int(statchoice1) - 1]] += ancestrystats[ancnum][6]
                    if ancestrystats[ancnum][7] > 0:
                        print()
                        print("Your ancestry allows you to add %s to another stat of your choice that has not already been increased." % ancestrystats[ancnum][7])
                        statcheck2 = 1
                        while statcheck2 > 0:
                            print("Key in the corresponding number to choose:")
                            print("Strength: 1, Dexterity: 2, Constitution: 3, Intelligence: 4, Wisdom: 5, Charisma: 6")
                            statchoice2 = input()
                            if statchoice2.isdigit():
                                if 0 < int(statchoice1) <= 6 and statchoice2 == statchoice1 or ancestrystats[ancnum][int(statchoice2) - 1] > 0:
                                    print("You cannot increase a stat a second time.")
                                elif 0 < int(statchoice2) <= 6:
                                    new_stats[allstats[int(statchoice2) - 1]] += ancestrystats[ancnum][7]
                                    statcheck1 = 0
                                    statcheck2 = 0
                                else:
                                    print("Invalid selection. Enter a number between 1 and 6.")
                            else:
                                print("Invalid selection. Enter a number between 1 and 6.")
                    else:
                        statchoice1 = 0
                else:
                    print("Invalid selection. Enter a number between 1 and 6.")
            else:
                print("Invalid selection. Enter a number between 1 and 6.")
    return new_stats


def dndchar():
    global ancestries, classes
    ancnum = dndancest()
    classnum = dndclass()
    ancname = ancestries[int(ancnum)]
    classname = classes[int(classnum)]
    print()
    print("Alright you are a %s %s!" % (ancname, classname))
    print()
    statinput = 1
    while statinput > 0:
        print("Do you want to take a standard array of stats (S) or roll for them (R)? S/R")
        statchoice = input()
        if statchoice.upper() == "S" or statchoice.upper() == "STANDARD" or statchoice.upper() == "STANDARD ARRAY":
            statarray = [15, 14, 13, 12, 10, 8]
            statinput = 0
        elif statchoice.upper() == "R" or statchoice.upper() == "ROLL":
            statarray = dndstatroll(statmin)
            statinput = 0
        else:
            print("Invalid Input. Enter S to take the standard array or R to roll for them")
    print("Here's your stat array: %s" % statarray)

    stats = dndstatassign(statarray, classnum)

    stats = dndanceststat(stats,ancnum)
    print()
    print("Here is your character:")
    print("A %s %s with:" % (ancname, classname))
    print(stats)

dndchar()
